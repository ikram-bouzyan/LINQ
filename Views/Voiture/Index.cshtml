@model List<Voiture>
<div class="container">
    <h1 class="mt-3">Index</h1>

    <ul class="list-group mt-3">
        @foreach (Voiture vtr in ViewBag.Voiture)
        {
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <div>
                    <strong>ID:</strong> @vtr.Id |
                    <strong>Marque:</strong> @vtr.Marque |
                    <strong>Modele:</strong> @vtr.Model |
                    <strong>Type:</strong> @vtr.Type |
                    <strong>Annee Immatriculation:</strong> @vtr.AnneeImmatriculation |
                    <strong>Kilometrage:</strong> @vtr.Kilometrage |
                </div>
                <form method="post" asp-controller="Voiture" asp-action="Supprimer" onsubmit="return confirm('Are you sure you want to delete this Voiture?');">
                    <input type="hidden" name="Id" value="@vtr.Id" />
                    <button type="submit" class="btn btn-danger">Supprimer</button>
                </form>

                <form method="post" asp-controller="Voiture" asp-action="Modifier">
                    <input type="hidden" name="Id" value="@vtr.Id" />
                    <button type="submit" class="btn btn-warning">Modifier</button>
                </form>
            </li>
        }
    </ul>

