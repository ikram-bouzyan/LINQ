@model Tp5_LINQ.Models.Voiture

@{
    ViewData["Title"] = "Modifier";
}

<h2>Modifier</h2>

<form asp-action="Modifier" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Marque" class="control-label"></label>
        <input asp-for="Marque" class="form-control" />
        <span asp-validation-for="Marque" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Model" class="control-label"></label>
        <input asp-for="Model" class="form-control" />
        <span asp-validation-for="Model" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Type" class="control-label"></label>
        <input asp-for="Type" class="form-control" />
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AnneeImmatriculation" class="control-label"></label>
        <input asp-for="AnneeImmatriculation" class="form-control" />
        <span asp-validation-for="AnneeImmatriculation" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Kilometrage" class="control-label"></label>
        <input asp-for="Kilometrage" class="form-control" />
        <span asp-validation-for="Kilometrage" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Enregistrer</button>
    <a asp-action="Index" class="btn btn-secondary">Retour</a>
</form>
